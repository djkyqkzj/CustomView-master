<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_main_textview1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="ScrollView滑动切换标题"/>

            <TextView
                android:id="@+id/activity_main_textview2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="ScrollView滑动拉伸头部ImageView"/>

            <TextView
                android:id="@+id/activity_main_textview3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="ListView左划删除"/>

            <TextView
                android:id="@+id/activity_main_textview4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="ListView拖动排序"/>

            <TextView
                android:id="@+id/activity_main_gridview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="GridView拖动排序"/>

            <TextView
                android:id="@+id/activity_main_textview5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="TextView跑马灯"/>

            <TextView
                android:id="@+id/activity_main_textview6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="View实现刮刮卡效果"/>

            <TextView
                android:id="@+id/activity_main_textview7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="ViewGroup实现流布局"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>